<h2 class="font-bold uppercase items-center mb-4">Events:</h2>
<div class="events-container">
  {{#each events as |event|}}
  <div class="event-item mb-4">
    <div class="bg-blue-100 p-4 rounded-xl shadow-md grid grid-cols-3 gap-4" style="max-width: 70%;">
      <h2 class="col-span-2">
        <a class="event hover:text-green-500" href="/event/{{event.id}}">{{event.title}}</a>
      </h2>
      <p class="userName text-blue-700 text-sm text-right">
        Created by
        {{event.user.name}}
      </p>
      <div class="bg-green-100 p-2 rounded-xl col-span-3 ">
        <span class="text-xs"> {{event.date}}</span>
      </div>
    </div>
  </div>
  {{/each}}
</div>
<article class="new-page">
  <section class="new-form-page">
    <div class="form-heading bg-blue-400">
      <h2>Create New Community Event</h2>
    </div>
    <div class="form-section">
      <form class="new-event-form">
        <div class="event-title-section">
          <label for="event-title">Title</label>
          <input type="text" id="event-title" name="event-title" />
        </div>
        <div>
          <label for="event-location">Location</label>
          <input type="text" id="event-location" name="event-location" />
        </div>
        <div>
          <label for="event-date">Date</label>
          <input type="date" id="event-date" name="event-date" />
        </div>
        <div class="event-description">
          <label for="event-description">Description</label>
          <textarea
            class="entry-field"
            id="event-description"
            name="event-description"
          ></textarea>
        </div>
        <button type="submit" class="btn bg-blue-400">Create</button>
      </form>
    </div>
  </section>
</article>


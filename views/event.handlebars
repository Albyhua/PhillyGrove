<div>
  <div class="bg-gray-100 p-6 rounded-xl shadow-md mb-4">
    <h2 class="text-2xl font-semibold text-blue-700">{{title}}</h2>
    <p class="text-md mt-2 text-gray-700">Event posted by <span class="font-medium">{{user.name}}</span></p>
    <p class="text-sm text-green-500 mt-1">Date of Event: {{date}}</p>
    <p class="text-sm text-green-500 mt-1">Location: {{location}}</p>
    <div class="mt-4">
      <p class="text-gray-700 bg-blue-100 p-4 rounded-tl-none rounded-xl shadow-md inline-block">
        {{description}}
      </p>
    </div>
  </div>

</div>
<div class=" py-2 mt-4">
  <h3 class="font-semibold">Comments:</h3>
  {{> comments comments }}
</div class="mb-1 mt-4">
{{!-- <h3 class="font-semibold mb-0 mt-4">Create a comment:</h3> --}}
<form class="comment-form bg-blue-100 p-4 rounded-br-none rounded-xl shadow-md">
  <div class="mb-4">
    <label class="font-semibold mb-2 block">Add a Comment:</label>
    <input id="comment-name" name="comment-name" class="border rounded-md p-2 w-full" />
  </div>
  <div class="flex justify-end">
    <button class="bg-blue-300 hover:bg-blue-400 text-white py-2 px-4 rounded-md" type="submit">Send</button>
  </div>
</form>

</div>
<script src="/js/comment.js"></script>
<div>
  <div>
    <h2 class="text-2xl">{{event.title}}</h2>
    <p class="text-1xl">Event posted by {{user.name}} </p>
    <p class="text-xl text-green-500">Date of Event: {{date_created}}</p>
    <div>
    <p>{{description}}</p>
    </div>
  </div>
  <div class="border-2 border-blue-400 py-2 mt-4">
  <h3>Comments:</h3>
  {{#each comments as |comment|}}
  <div>
    <p>{{user.name}}</p>
    <p>{{comment_text}}</p>
  </div>
  {{/each}}
  </div>
  <h3>Create a comment:</h3>
  <form>
    <div>
      <label>Comment text:</label>
      <input id="comment-name" name="comment-name" />
    </div>
    <div>
      <button type="submit">Submit</button>
    </div>
  </form>
</div>
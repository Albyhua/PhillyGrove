<div>
  <div>
    <h2>{{title}}</h2>
    <p>{{user.name}} {{date_created}}</p>
    <p>{{description}}</p>
  </div>
  <h3>Comments:</h3>
  {{#each comments as |comment|}}
  <div>
    <p>{{user.name}}</p>
    <p>{{comment_text}}</p>
  </div>
  {{/each}}
  <h3>Create a comment:</h3>
  <form>
    <div>
      <label>Comment text:</label>
      <input id="comment-name" name="comment-name" />
    </div>
    <div>
      <button type="submit">Submit</button>
    </div>
  </form>
</div>
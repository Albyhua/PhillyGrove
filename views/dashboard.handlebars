<section class="py-8 px-4">
  <div class="max-w-xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-blue-700 bg-white p-5 rounded-lg shadow-md text-center">
      Your Events
    </h2>

    <section class="justify-center py-4">
      <button type="submit" class="btn bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-1 rounded"
        id="new-event-form">
        + Create New Event
      </button>
    </section>
  </div>
</section>
{{#if events.length}}
<ul>
  {{#each events as |event|}}
  <li class="mt-8 mb-8 bg-white shadow-sm rounded-lg">
    <div class="px-6 py-4 bg-blue-100">
      <div class="font-semibold text-lg mb-2 text-gray-700 text-center"></div>
      <a href="/event/{{event.id}}"
        class="text-blue-700 hover:text-green-500 text-2xl mb-4 block font-bold transition-colors duration-200 text-center">{{event.title}}</a>
      <button
        class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-400">
        <a href="/dashboard/edit/{{event.id}}" class="block text-center">
          Edit
        </a>
      </button>

    </div>
  </li>

  {{/each}}
</ul>
</section>
{{/if}}

<script src="/js/create-post.js"></script>
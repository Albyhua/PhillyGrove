<div class="row justify-space-between-md">
  <div class="login-card w-full max-w-md mx-auto mt-10">
    <h2 class="page-title font-semibold text-lg mb-6 text-center text-4xl font-bold subpixel-antialiased">Login</h2>
    <form class="form login-form mt-0 mb-4 box-sizing: content-box">
      <div class="form-group bg-gradient-to-r from-blue-500 to-blue-400 shadow-md rounded px-8 pt-6 pb-8 mb-2">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group bg-gradient-to-r from-blue-400 to-blue-300 shadow-md rounded px-8 pt-6 pb-8 mb-4 ">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group bg-gradient-to-r from-blue-300 to-blue-200 shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <a href="/signup" class="sign-in-link">Sign Up!</a>
  </section>

  <script src="./js/login.js"></script>